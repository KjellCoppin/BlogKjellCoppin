@page
@model IndexModel
@{
    ViewData["Title"] = "Modern Blog";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 56px;
            background-color: #f5f5f5;
            font-family: 'Roboto', sans-serif;
            color: #495057;
        }

        .container-fluid {
            padding-left: 0;
            padding-right: 0;
        }

        .row {
            margin-right: 0;
            margin-left: 0;
        }

        .side-nav {
            background-color: #f5f5f5;
            border-right: 1px solid #e1e1e1;
            height: 100vh;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .nav-item {
            text-align: center;
        }

        .nav-link {
            color: #495057;
        }

            .nav-link:hover {
                background-color: #e1e1e1;
            }

        .main-content {
            margin-left: 200px;
            padding: 20px;
        }

        .post {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .post h2 {
                color: #007bff;
            }

            .post p {
                color: #6c757d;
            }

        .card {
            background-color: #ffffff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 10px;
        }

        .btn-secondary {
            background-color: #007bff;
            color: #ffffff;
            border-radius: 10px;
        }

        .carousel-inner {
            border-radius: 10px;
        }

        .btn-link {
            cursor: pointer;
        }
    </style>
    <title>Modern Blog Kjell Coppin</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Side Navbar -->
            <nav class="col-md-2 d-none d-md-block side-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Me
                            <img src="icon-link-here" alt="Information icon" />
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-8 main-content">
                <h1 class="mt-4">Blog Kjell Coppin</h1>
                <hr />
                @foreach (var post in Model._repo.Posts)
                {
                    <div class="post">
                        <h2 class="mt-4">@post.Title</h2>

                        @if (post.Images.Any())
                        {
                            // carrousel images
                            string carouselId = $"CarouselBox_{Guid.NewGuid()}";
                            <div id="@carouselId" class="carousel slide">
                                <div class="carousel-inner">
                                    @for (int i = 0; i < post.Images.Count; i++)
                                    {
                                        var activeClass = i == 0 ? "active" : "";
                                        <div class="carousel-item @activeClass">
                                            <img src="@post.Images[i]" alt="Post Image" class="d-block w-100" />
                                        </div>
                                    }
                                </div>
                                <a class="carousel-control-prev" href="#@carouselId" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#@carouselId" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        }

                        <p>@post.PublishDate.ToString("MMMM dd, yyyy")</p>
                        <hr />

                        <p id="fullPost_@post.Id" style="display: none;">@Html.Raw(post.Content)</p>
                        <p id="shortPost_@post.Id">@Html.Raw(post.ShortContent())</p>

                        <div class="toggle-button btn-link" data-target="@post.Id">Show Full Post</div>
                    </div>
                }
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".toggle-button").click(function () {
                // Get the target post ID
                var postId = $(this).data("target");
                console.log(postId);

                // Toggle visibility of full and short post content for the specific post
                $("#fullPost_" + postId).toggle();
                $("#shortPost_" + postId).toggle();

                // Change the text of the toggle button for the specific post
                var buttonText = ($("#fullPost_" + postId).is(":visible")) ? "Hide Full Post" : "Show Full Post";
                $(this).text(buttonText);
            });
        });
    </script>
</body>
</html>
